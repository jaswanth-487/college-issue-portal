    <script>
        function handleSubmit(e) {
            e.preventDefault();
            const btn = document.getElementById('submitBtn');
            const originalBtnContent = btn.innerHTML;
            const form = document.getElementById('grievanceForm');
            // Check for saved URL in localStorage (Developer setup)
            const scriptUrl = localStorage.getItem('googleSheetUrl');

            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';

            const formData = new FormData(form);

            // Handle Actual Submission
            if (scriptUrl) {
                fetch(scriptUrl, { method: 'POST', body: formData })
                    .then(() => {
                        showThankYouPage();
                    })
                    .catch(() => {
                        showNotification('error', 'Error', 'Failed to submit. Check connection.');
                        btn.disabled = false;
                        btn.innerHTML = originalBtnContent;
                    });
            } else {
                // Simulation for Demo purposes if no URL is connected
                setTimeout(() => {
                    showThankYouPage();
                    console.log("Demo Mode: In a real scenario, connect your Google Sheet URL via localStorage.setItem('googleSheetUrl', 'YOUR_URL')");
                }, 1500);
            }
        }

        function showThankYouPage() {
            document.getElementById('formPage').classList.add('hidden');
            document.getElementById('thankYouPage').classList.remove('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function showNotification(type, title, message) {
            const notif = document.getElementById('notification');
            const icon = document.getElementById('notifIcon');
            const titleEl = document.getElementById('notifTitle');
            const msgEl = document.getElementById('notifMessage');

            notif.className = 'mb-6 p-4 rounded-xl shadow-lg transform transition-all duration-500 flex items-center';
            if (type === 'error') {
                notif.classList.add('bg-red-100', 'text-red-800', 'border', 'border-red-200');
                icon.innerHTML = '<i class="fas fa-exclamation-circle text-red-600"></i>';
            }

            titleEl.textContent = title;
            msgEl.textContent = message;
            notif.classList.remove('hidden');
            setTimeout(() => notif.classList.remove('scale-95', 'opacity-0'), 10);
        }
    </script>
